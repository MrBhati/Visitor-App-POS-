    <RelativeLayout
        android:id="@+id/visit_id_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/visitor_number_card"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/visit_id_icon"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@drawable/visit" />

        <TextView
            android:id="@+id/visit_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/visit_id_icon"

            android:text="Visit Code:"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/visit_id_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/visit_id_tv"
            android:text="MOK869NJIKFN85"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/visit_department_card"
        android:layout_below="@id/visit_id_card"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/visit_department_icon"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:src="@drawable/ic_department" />

        <TextView
            android:id="@+id/visit_department_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/visit_department_icon"
            android:text="Visit Department"
            android:textSize="16dp"

            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/visit_designation_card"
        android:layout_below="@id/visit_department_card"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/visit_designation_icon"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@drawable/ic_designation" />

        <TextView
            android:id="@+id/visit_designation_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/visit_designation_icon"
            android:text="Visit Designation"
            android:textSize="16dp"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/purpose_visit_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/visit_designation_card"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/purpose_visit_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:src="@drawable/ic_reason" />

        <TextView
            android:id="@+id/purpose_visit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/purpose_visit_icon"
            android:text="Purpose to visit"
            android:textSize="16dp"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/last_update_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/purpose_visit_card"

        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/last_update_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:text="Visited On:"

            android:textSize="18dp"

            />

        <TextView
            android:id="@+id/last_update_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/last_update_tv"
            android:text="17/09/2022 11:55 AM"
            android:textSize="18dp"

            />

    </RelativeLayout>

