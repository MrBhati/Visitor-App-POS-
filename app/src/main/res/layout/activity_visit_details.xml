    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="50dp"
            android:layout_marginTop="400dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/purple_500"
            android:layout_centerHorizontal="true" />


        <RelativeLayout
            android:id="@+id/visit_show_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/visit_image_test"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="120dp"
                android:src="@drawable/usericon"
                app:civ_border_color="#FF000000"
                app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/visit_visitor_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/visit_image_test"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Surendra Singh Bhati"
            android:textSize="20dp"
            android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/visitor_number_card"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/visit_visitor_name_tv"
        >

        <ImageView
            android:id="@+id/mobile_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/mobile" />

        <TextView
            android:id="@+id/visitor_mobile_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/mobile_icon"
            android:text="+91 7021914186"
            android:textSize="16dp"

            />

    </RelativeLayout>




