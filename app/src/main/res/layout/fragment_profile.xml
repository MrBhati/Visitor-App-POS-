<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/click_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="120dp"
        android:src="@drawable/usericon"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_small_card"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/name_tv"
        >

        <ImageView
            android:id="@+id/name_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/name_small_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/name_icon"
            android:text="+Surendra"
            android:textSize="16dp"

            />

    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/number_card"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_below="@id/name_small_card"
    >

    <ImageView
        android:id="@+id/mobile_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="4dp"
        android:src="@drawable/mobile" />

    <TextView
        android:id="@+id/mobile_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/mobile_icon"
        android:text="+91 7021914186"
        android:textSize="16dp"

        />

</RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_card"
        android:layout_below="@id/number_card"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:padding="4dp"
            android:id="@+id/email_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/email"/>

        <TextView
            android:id="@+id/email_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/email_icon"
            android:text="mrbhatisurendra@gmail.com"
            android:textSize="16dp"

            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/type_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_card"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/type_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@drawable/type" />

        <TextView
            android:id="@+id/position_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/type_icon"
            android:text="Super Admin"
            android:textSize="16dp"

            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/last_login_at_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_card"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/last_login_at_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@drawable/ic_time" />

        <TextView
            android:id="@+id/last_login_at_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/last_login_at_icon"
            android:text="last_login_at"
            android:textSize="16dp"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/created_at_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_login_at_card"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/created_at_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@drawable/ic_time" />

        <TextView
            android:id="@+id/created_at_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/created_at_icon"
            android:text="created_at"
            android:textSize="16dp"

            />

    </RelativeLayout>


    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/click_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Surendra Singh Bhati"
        android:textSize="20dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/logout_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type_card"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"

        android:layout_marginTop="80dp"
        android:layout_marginEnd="110dp"
        android:text="LogOut" />


