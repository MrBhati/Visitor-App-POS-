<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">


    <ImageView
        android:id="@+id/splash_logo_image"
        android:layout_width="234dp"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="88dp"
        android:src="@drawable/printlogo" />

    <TextView
        android:id="@+id/welcom_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_logo_image"
        android:layout_marginStart="4dp"
        android:layout_marginTop="112dp"
        android:gravity="center"
        android:text="Welcome to the"
        android:textColor="@color/purple_500"
        android:textSize="18dp"

        />

    <TextView
        android:id="@+id/visitor_splash_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcom_tx"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/purple_700"
        android:text="SLUM REHABILITATION AUTHORITY  \n VISITOR MANAGEMENT APPLICATION"
        android:textSize="18dp"
        android:textStyle="bold"

        />

</RelativeLayout>